#visualizer {
	svg {
		display: block;
		margin: 0 auto;
	}
}

#equalizer {
	th {
		text-align: center;
	}
}

.tests {
	text-align: right;
	a {
		display: inline-block;
		background: #ccc;
		padding: 10px;
	}
}

#scene {
	margin: 20px 0;
}

table td {
	padding: 5px;
}

.bar {
	fill: steelblue;
}

.axis {
	font: 10px sans-serif;
}

.axis path,
.axis line {
	fill: none;
	stroke: #000;
	shape-rendering: crispEdges;
}

.x.axis path {
	display: none;
}
